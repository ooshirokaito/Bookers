<div class="post-index">
	<h1 class="post-index-title">Books</h1>
	<div class="main-top">
		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td>
						<%= post.title %>
					</td>
					<td>
						<%= post.body %>
					</td>
					<td>
						<%= link_to "Show", post_path(post.id) %>
						<%= link_to "Edit", edit_post_path(post.id) %>
						<%= link_to "Destroy", destroy_post_path(post.id), method: :delete, "date-confirm" => "Are you sure?" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="main-under">
		<h2 class="main-under-title">New book</h2>
		<%= form_for(@post) do |f| %>

		<h3 class="main-under-text">Title</h3>
		<%= f.text_field :title %>

		<h3 class="main-under-text">Body</h3>
		<%= f.text_area :body %>

		<div class="main-under-br">
			<br><%= f.submit 'Create Book' %><br>
		</div>

		<% end %>
	</div>
</div>
