<div class="editpage">
	<h2>Editing Book</h2>
	<%= form_for(@post) do |f| %>

	<h3>Title</h3>
	<%= f.text_field :title %>

	<h3>Body</h3>
	<%= f.text_area :body %>

	<br><%= f.submit 'Update Book' %><br>

	<% end %>

	<div class="editpage-under">
		<%= link_to "Show", "/posts/#{@post.id}" %> |
		<%= link_to "Back", posts_path %>
	</div>

</div>